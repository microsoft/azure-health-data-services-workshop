{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.5.6.12127",
      "templateHash": "16354710192668829573"
    }
  },
  "parameters": {
    "resourceTags": {
      "type": "object",
      "defaultValue": {
        "environmentName": "Azure Health Data Services OpenHack",
        "challengeTitle": "Deploy Core Training Environment",
        "expirationDate": "06/30/2022"
      },
      "metadata": {
        "description": "Tags to be applied to resources that are deployed in this template"
      }
    },
    "deploymentPrefix": {
      "type": "string",
      "maxLength": 7,
      "minLength": 3,
      "metadata": {
        "description": "Deployment Prefix - all resources that are created in this workshop will start with this prefix"
      }
    },
    "resourceLocation": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure Region where the resources will be deployed. Default Value: the resource group region"
      }
    }
  },
  "variables": {
    "uniqueId": "[toLower(take(uniqueString(subscription().id, resourceGroup().id, parameters('deploymentPrefix')), 6))]",
    "workspaceName": "[format('{0}{1}hdsws', parameters('deploymentPrefix'), variables('uniqueId'))]",
    "fhirName": "data",
    "loginURL": "[environment().authentication.loginEndpoint]",
    "tenantId": "[subscription().tenantId]",
    "authority": "[format('{0}{1}', variables('loginURL'), variables('tenantId'))]",
    "audience": "[format('https://{0}-{1}.fhir.azurehealthcareapis.com', variables('workspaceName'), variables('fhirName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/tags",
      "apiVersion": "2021-04-01",
      "name": "default",
      "properties": {
        "tags": "[parameters('resourceTags')]"
      },
      "metadata": {
        "description": "Tags at the resource group level"
      }
    },
    {
      "type": "Microsoft.HealthcareApis/workspaces",
      "apiVersion": "2021-11-01",
      "name": "[variables('workspaceName')]",
      "tags": "[parameters('resourceTags')]",
      "location": "[parameters('resourceLocation')]",
      "properties": {
        "publicNetworkAccess": "Enabled"
      },
      "metadata": {
        "description": "This is the Azure Health Data Services workspace for use in this workshop"
      }
    },
    {
      "type": "Microsoft.HealthcareApis/workspaces/fhirservices",
      "apiVersion": "2021-11-01",
      "name": "[format('{0}/{1}', variables('workspaceName'), variables('fhirName'))]",
      "tags": "[parameters('resourceTags')]",
      "location": "[parameters('resourceLocation')]",
      "kind": "fhir-R4",
      "identity": {
        "type": "SystemAssigned"
      },
      "properties": {
        "authenticationConfiguration": {
          "authority": "[variables('authority')]",
          "audience": "[variables('audience')]",
          "smartProxyEnabled": false
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.HealthcareApis/workspaces', variables('workspaceName'))]"
      ],
      "metadata": {
        "description": "This is the FHIR Service under the Azure Health Data Services workspace for use in this workshop"
      }
    }
  ]
}